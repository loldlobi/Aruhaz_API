generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id  Int        @id @default(autoincrement())
  email    String
  username String
  password String
  Termekek Termekek[]
}

model Termekek {
  termekek_id       Int                 @id @default(autoincrement())
  kep               String
  cim               String
  description       String
  ar                Int
  user_id           Int
  user              User                @relation(fields: [user_id], references: [user_id])
}
